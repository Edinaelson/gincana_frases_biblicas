    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["GincanaPassagensBiblicas.styles.css"]" />
    <link rel="stylesheet" href="/_content/Radzen.Blazor/css/default.css" />
    <link rel="stylesheet" href="/_content/Radzen.Blazor/css/radzen-icons.css" />
